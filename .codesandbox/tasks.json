{
  // Setup tasks - execute on MicroVM launch and restart
  "setupTasks": [
    "npm install",                  // Installs all dependencies on startup
    // "npm run setup-db",
    "node src/app.js"
  ],

  // Development tasks - these begin automatically after setup completes
  "tasks": {
    "start": "node src/app.js",       // Starts your server (default entry point)
    "install": "npm install",
    "dotenv": "npm install dotenv"        // Installs all dependencies from package.json
  }
}